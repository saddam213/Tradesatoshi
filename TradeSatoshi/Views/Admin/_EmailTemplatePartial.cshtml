@model System.Collections.Generic.List<TradeSatoshi.Common.Repositories.Email.EmailTemplateModel>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Email Templates</h3>
			</div>
			<div class="panel-body">
				<div class="col-md-2">
					<ul id="email-list" class="nav nav-pills nav-pills-primary nav-stacked">
						@foreach (var template in Model)
						{
						<li ><a data-toggle="tab" onclick="getEmailTemplate('@template.Type')">@template.Type</a></li>
						}
					</ul>
				</div>
				<div id="emailTemplateTarget" class="col-md-10">
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	function getEmailTemplate(type) {
		getPartial('#emailTemplateTarget', '@Url.Action("GetEmailTemplate")?emailType=' + type);
	}
	$("#email-list > li:first > a").trigger("click");
</script>

