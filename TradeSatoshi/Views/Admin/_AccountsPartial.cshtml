@model TradeSatoshi.Common.Admin.AdminAccountsModel

<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">User Accounts</h3>
			</div>
			<div class="panel-body">
				<table class="table table-condensed">
					<thead>
						<tr>
							<th></th>
							<th>UserName</th>
							<th>Email</th>
							<th>IsLocked</th>
							<th>IsTradeEnabled</th>
							<th>IsWithdrawEnabled</th>
							<th>IsTransferEnabled</th>
							<th>IsEnabled</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script>
	$('.table').dataTable({
		"order": [[1, "asc"]],
		"lengthChange": false,
		"processing": true,
		"bServerSide": true,
		"searching": true,
		"scrollCollapse": false,
		"sPaginationType": "simple_numbers",
		"pageLength": 15,
		"sort": true,
		"paging": true,
		"info": true,
		"language": { "emptyTable": "No data avaliable." },
		"sAjaxSource": '@Url.Action("GetUsers")',
		"sServerMethod": "POST",
		"columnDefs": [{
			"targets": 0,
			"searchable": false,
			"orderable": false,
			"visible": false
		}, {
			"targets": 8,
			"searchable": false,
			"orderable": false,
			"render": function (data, type, full, meta) {
				return "<button onclick='accountEdit(\"" + full[0] + "\");' class='btn btn-xs'>Edit Account</button>";
			}
		}]
	});

	function accountEdit(userId) {
		openModal('@Url.Action("UpdateUser")', { userId: userId }, function () {
			getPartial('#accountTarget', '@Url.Action("Accounts")');
		});
	}
</script>

