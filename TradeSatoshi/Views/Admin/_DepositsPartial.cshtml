<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Site Deposits</h3>
			</div>
			<div class="panel-body">
				<table id="table-deposit" class="table table-condensed">
					<thead>
						<tr>
							<th>Id</th>
							<th>Currency</th>
							<th>Symbol</th>
							<th>Amount</th>
							<th>Status</th>
							<th>Confirmations</th>
							<th>Txid</th>
							<th>TimeStamp</th>
						</tr>
					</thead>
					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script>
	$('#table-deposit').dataTable({
		"order": [[1, "asc"]],
		"lengthChange": false,
		"processing": true,
		"bServerSide": true,
		"searching": true,
		"scrollCollapse": false,
		"sPaginationType": "simple_numbers",
		"pageLength": "15",
		"sort": true,
		"paging": true,
		"info": true,
		"language": { "emptyTable": "No data avaliable." },
		"sAjaxSource": '@Url.Action("GetDeposits")',
		"sServerMethod": "POST"
	});
</script>