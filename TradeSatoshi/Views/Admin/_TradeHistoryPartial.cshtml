<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Site Withdrawals</h3>
			</div>
			<div class="panel-body">
				<table id="table-tradehistory" class="table table-condensed">
					<thead>
						<tr>
							<th>Id</th>
							<th>TradePair</th>
							<th>TradeType</th>
							<th>Amount</th>
							<th>Rate</th>
							<th>Fee</th>
							<th>Timestamp</th>
							<th>IsApi</th>
						</tr>
					</thead>
					<tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script>
	$('#table-tradehistory').dataTable({
		"order": [[1, "asc"]],
		"lengthChange": false,
		"processing": true,
		"bServerSide": true,
		"searching": true,
		"scrollCollapse": false,
		"sPaginationType": "simple_numbers",
		"pageLength": "15",
		"sort": true,
		"paging": true,
		"info": true,
		"language": { "emptyTable": "No data avaliable." },
		"sAjaxSource": '@Url.Action("GetTradeHistory")',
		"sServerMethod": "POST"
	});
</script>