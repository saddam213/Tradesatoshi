<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Trade History</h3>
	</div>
	<div class="panel-body">
		<table id="table-tradehistory" class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>TradePair</th>
					<th>TradeType</th>
					<th>Amount</th>
					<th>Rate</th>
					<th>Fee</th>
					<th>Timestamp</th>
					<th>IsApi</th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
	</div>
</div>

<script>
	$('#table-tradehistory').dataTable({
		"order": [[0, "desc"]],
		"lengthChange": false,
		"processing": true,
		"bServerSide": true,
		"searching": true,
		"oSearch": { "sSearch": "@ViewBag.Search" },
		"scrollCollapse": false,
		"sPaginationType": "simple_numbers",
		"scrollY": '600px',
		"pageLength": 15,
		"sort": true,
		"paging": true,
		"info": true,
		"language": { "emptyTable": "No data avaliable.", "search": "", searchPlaceholder: "Search trades" },
		"sAjaxSource": '@Url.Action("GetTrades")',
		"sServerMethod": "POST"
	});
</script>
