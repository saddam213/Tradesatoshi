@model TradeSatoshi.Common.TwoFactor.RemoveTwoFactorModel
@{
	ViewBag.Title = Html.Resource("Remove TFA");
}

<h2>@ViewBag.Title.</h2>
<div class="row">
	<div class="col-md-8">
		<section>
			@using (Html.BeginForm("Remove", "TwoFactor", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.HiddenFor(m => m.Type)
				@Html.HiddenFor(m => m.ComponentType)
				<h4>@Html.Resource("Remove " + Model.ComponentType.ToString() + " TwoFactor Authentication.")</h4>
				<hr />
				<div class="row">
					<div class="col-md-7 ">
						@Html.ValidationSummary("", htmlAttributes: new { @class = "alert alert-danger text-center" })
					</div>
				</div>
				if (Model.Type == TradeSatoshi.Enums.TwoFactorType.EmailCode)
				{
				<div class="row">
					<div class="col-md-7 ">
						<div class="alert alert-success text-center">
							<h5>@Html.Resource("Your unlock code has been sent to your registered TFA email address")</h5>
						</div>
					</div>
				</div>
				}
				<div class="form-group">
					@Html.ResourceLabelFor(m => m.Data, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.PasswordFor(m => m.Data, new { @class = "form-control" })
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="@Html.Resource("Remove TwoFactor")" class="btn btn-default" />
					</div>
				</div>
			}
		</section>
	</div>
</div>
