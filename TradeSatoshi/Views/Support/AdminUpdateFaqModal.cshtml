@model TradeSatoshi.Common.Support.UpdateSupportFaqModel
@{
	Layout = "~/Views/Shared/_Modal.cshtml";
}
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button class="close simplemodal-close" aria-hidden="true" type="button" onclick="$.modal.close();">×</button>
			<h3 class="modal-title"><span class="symbol"></span>Update Support FAQ</h3>
			<small>Update an existing support FAQ item.</small>
		</div>
		@using (Ajax.BeginForm("AdminUpdateFaq", "Support", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "simplemodal-data", InsertionMode = InsertionMode.Replace }, new { @class = "form-horizontal" }))
		{
			@Html.AntiForgeryToken()
			@Html.HiddenFor(m => m.Id)
			<div class="row">
				<div class="col-md-12">
					@Html.ValidationSummary(true, "", htmlAttributes: new { @class = "alert alert-danger text-center" })
				</div>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-xs-12">
						<div class="form-group">
							<div class="col-md-12">
								@Html.LabelFor(m => m.Question, new { @class = "control-label" })
								@Html.TextBoxFor(m => m.Question, new { @class = " form-control form-control-fullwidth" })
								@Html.ValidationMessageFor(m => m.Question)
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								@Html.LabelFor(m => m.Answer, new { @class = "control-label" })
								@Html.TextAreaFor(m => m.Answer, new { @class = " form-control form-control-fullwidth", rows = 12 })
								@Html.ValidationMessageFor(m => m.Answer)
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-6">
								@Html.LabelFor(m => m.Order, new { @class = "control-label" })
								@Html.TextBoxFor(m => m.Order, new { @class = " form-control form-control-fullwidth" })
								@Html.ValidationMessageFor(m => m.Order)
							</div>
							<div class="col-md-6">
								<div class="checkbox">
									<label>
										@Html.CheckBoxFor(model => model.IsEnabled)
										@Html.Resource("Is FAQ enabled")
									</label>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="modal-footer">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="button" class="btn btn-primary simplemodal-close" onclick="$.modal.close();">Cancel</button>
			</div>
		}
	</div>
</div>

@Scripts.Render("~/bundles/jqueryval")


