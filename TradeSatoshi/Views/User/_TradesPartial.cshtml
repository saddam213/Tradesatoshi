<div class="row">
	<div class="col-md-12">
		<div id="p1" class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Open Orders</h3>
			</div>
			<div class="panel-body">
				<table id="table-trades" class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>TradePair</th>
							<th>TradeType</th>
							<th>Amount</th>
							<th>Rate</th>
							<th>Fee</th>
							<th>Remaining</th>
